            <a href="/user/primes" {% if app.request.get('_route') == 'userhomepage' %} class="active" {% endif %}>
              <i class="fa fa-sticky-note"></i>
              <span>Demande de prime</span>
              </a>
          </li>
           <li class="mt">
            <a href="/HistoriquedemandesPrime" {% if app.request.get('_route') == 'HistoriquedemandesPrime' %} class="active" {% endif %}>
              <i class="fa fa-history"></i>
              <span>Historique des primes</span>
              </a>
          </li>

          <li class="mt">
            <a href="/user/credits" {% if app.request.get('_route') == 'usercredits' %} class="active" {% endif %}>
              <i class="fa fa-sticky-note"></i>
              <span>Demande de crédit</span>
              </a>
          </li>
           <li class="mt">
            <a href="/Historiquecredits" {% if app.request.get('_route') == 'Historiquecredits' %} class="active" {% endif %}>
              <i class="fa fa-history"></i>
              <span>Historique des crédits</span>
              </a>
          </li>
          {% endif %}
           {% if is_granted('ROLE_USER') and is_granted('ROLE_RESPONSABLE') and  (is_granted('ROLE_ADMIN') == false) %}
          <li class="mt">
            <a href="/responsable/primes" {% if app.request.get('_route') == 'responsableprimes' or app.request.get('_route') == 'responsableprimesDetails' %} class="active" {% endif %}>
              <i class="fa fa-history"></i>
              <span>Gestion des primes</span>
              </a>
          </li>
          <li class="mt">
            <a href="/responsable/credits" {% if app.request.get('_route') == 'responsablecredits' or app.request.get('_route') == 'responsableprimesDetails' %} class="active" {% endif %}>
              <i class="fa fa-history"></i>
              <span>Gestion des Crédits</span>
              </a>
          </li>
          {% endif %}
           {% if is_granted('ROLE_USER') and (is_granted('ROLE_RESPONSABLE') == false) and is_granted('ROLE_ADMIN') %}
