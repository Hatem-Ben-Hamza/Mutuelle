    <aside>
      <div id="sidebar" class="nav-collapse ">
        <!-- sidebar menu start-->
        <ul class="sidebar-menu" id="nav-accordion">
          <p class="centered">
            <a href="/"><img src="{{ asset('img/admin.png') }}" class="img-circle" width="80"></a>
          </p>
          <h5 class="centered">{% if app.user.firstname != null and app.user.lastname != null  %}{{ app.user.firstname }} {{ app.user.lastname }}{% else %}{{ app.user.username }}{% endif %}</h5><span style="position: relative;
    left: 30%;text-transform:capitalize">{% if  app.user.roles[0] == 'ROLE_USER'  %}Utilisateur{% elseif app.user.roles[0] == 'ROLE_RESPONSABLE'  %}Responsable{% else %}Administrateur{% endif %}</span>
        {% if is_granted('ROLE_USER') and (is_granted('ROLE_RESPONSABLE') == false) and  (is_granted('ROLE_ADMIN') == false) %}
