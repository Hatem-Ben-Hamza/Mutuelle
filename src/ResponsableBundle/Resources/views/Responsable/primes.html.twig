{% extends 'base2.html.twig' %}

{% block body %}

<section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Gestion des primes</h3>
        {% for flashMessage in app.session.flashbag.get('success') %}
          <div class="alert alert-success">{{ flashMessage }}</div>
        {% endfor %}
        <!-- row -->
        <div class="row mt">
          <div class="col-md-12">
            <div class="content-panel">
              <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> Liste des demandes de primes</h4>
                <hr>
                <thead>
                  <tr>
                    <th><i class="fa fa-bullhorn"></i> Employé</th>
                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Type Prime</th>
                    <th><i class=" fa fa-calendar-o"></i> Date</th>
                    <th></th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                 {% for prime in primes %}
                  <td>{{ prime.getUser().lastname }} {{ prime.getUser().lastName }}</td>
                  <td>{{ prime.type }}</td>
                  <td>{{ prime.Datedemande|date('d-m-y') }}</td>
                  <td><a href="{{ path('responsableprimesDetails',{'id':prime.id}) }}">Voir détails</td>
                  <td>
                    <a href="{{ path('responsableprimesAccept',{'id':prime.id}) }}" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                    <a  href="{{ path('responsableprimesRefuse',{'id':prime.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-remove"></i></a>
                    </td>
                  <tr>
                 {% endfor %}
                  </tr>
                </tbody>
              </table>
            </div>
            <!-- /content-panel -->
          </div>
          <!-- /col-md-12 -->
        </div>
        <!-- /row -->
      </section>
    </section>


{% endblock %}