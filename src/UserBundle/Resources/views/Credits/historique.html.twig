{% extends 'base2.html.twig' %}

{% block body %}

<section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Gestion des Credits</h3>
        <!-- row -->
        <div class="row mt">
          <div class="col-md-12">
            <div class="content-panel">
              <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>Historique personnel des credits</h4>
                <hr>
                <thead>
                  <tr>
                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Objet Credit</th>
                    <th><i class=" fa fa-calendar-o"></i> Duree de remboursement</th>
                    <th><i class=" fa fa-status"></i> Status</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                 
                  {% for credit in credits %}
                   <tr>
                    <td>{{ credit.objet }}</td>
                    <td>{{ credit.duree }}</td>
                    {% if credit.status == 1 %}
                    <td><span class="label label-success label-mini">Accordé</span></td>
                    {% elseif credit.status == 0 %}
                    <td><span class="label label-danger label-mini">Refusé</span></td>
                    {% else %}
                    <td><span class="label label-info label-mini">En cours</span></td>
                    {% endif %}
                 </tr>
                 {% endfor %}
                  
                </tbody>
              </table>
            </div>
            <!-- /content-panel -->
          </div>
          <!-- /col-md-12 -->
        </div>
        <!-- /row -->
      </section>
    </section>


{% endblock %}