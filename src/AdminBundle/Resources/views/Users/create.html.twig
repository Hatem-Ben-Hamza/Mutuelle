{% extends 'base2.html.twig' %}

{% block body %}

 <section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Gestion des utilisateurs</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
          <div class="col-lg-12">
            <div class="form-panel">
              <h4 class="mb"><i class="fa fa-angle-right"></i> Ajouter un utilisateur</h4>
              {{ form_start(form,{'attr':{'class':'form-horizontal style-form'}}) }}
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">Nom d'utilisateur</label>
                  <div class="col-sm-10">
                    {{ form_row(form.username,{'attr':{'class':'form-control'},'label':false}) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">Email</label>
                  <div class="col-sm-10">
                    {{ form_row(form.email,{'attr':{'class':'form-control'},'label':false}) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">Mot de passe</label>
                  <div class="col-sm-10">
                    {{ form_row(form.password,{'attr':{'class':'form-control'},'label':false}) }}
                    <span class="help-block">Le mot de passe doit contenir au minimum 6 caract√©res.</span>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">Grade</label>
                  <div class="col-sm-10">
                    {{ form_row(form.grade,{'attr':{'class':'form-control'},'label':false}) }}
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label"></label>
                  <div class="col-sm-10">
                    <input type="submit" class="btn btn-sucess" value="Sauvegarder">
                  </div>
                </div>
              {{ form_end(form) }}
            </div>
          </div>
          <!-- col-lg-12-->
        </div>
        <!-- /row -->
      </section>
      <!-- /wrapper -->
    </section>


{% endblock %}