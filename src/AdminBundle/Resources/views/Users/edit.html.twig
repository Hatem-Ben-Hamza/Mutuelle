{% extends 'base2.html.twig' %}

{% block body %}

<section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Gestion des utilisateurs</h3>
        <div class="row mt">
          <div class="col-md-12">
            <div class="content-panel">
              <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i> Modifier/supprimer un utilisateur</h4>
                <hr>
                <thead>
                  <tr>
                    <th><i class="fa fa-user"></i> Nom et Pr√©nom</th>
                    <th class="hidden-phone"><i class="fa fa-question-circle"></i> Grade</th>
                    <th><i class="fa fa-bookmark"></i> Email</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                {% for user in users %}
                  <tr>
                    <td>
                      <a href="basic_table.html#">{{ user.firstName }} {{ user.lastName }}</a>
                    </td>
                    <td class="hidden-phone">{{ user.grade }}</td>
                    <td><span class="label label-info label-mini">{{ user.email }}</span></td>                    <td>
                      <button class="btn btn-primary btn-xs"><i class="fa fa-remove"></i></button>
                      <button class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i></button>
                      <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /content-panel -->
          </div>
          <!-- /col-md-12 -->
        </div>
        <!-- /row -->
      </section>
    </section>


{% endblock %}